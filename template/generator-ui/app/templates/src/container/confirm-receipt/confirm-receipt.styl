@import '../../shared/stylus/variable.styl'
@import '../../shared/stylus/mixin.styl'
@import '~stylus-px2rem/index'
html-font-size = 75px;

.comfirm__receipt
	background-color #F4F4F4
	height 100vh
	display flex
	flex-direction column
	align-items center
	.package__header
		width 100%
		display flex
		flex-direction column
		align-items center
		background-color #FFF
		.deliver
			width 702px
			height 88px
			display flex
			align-items center
			border-bottom 1px solid #E7E7E7
			.icon_deliver
				width 48px
				height 48px
			span
				margin-left 18px
				flex 1
				color #1B1B1B
				font-size 28px
				&.no__shop
					color #999
			.arrow__right
				width 36px
				height 36px
				margin-right 12px
		.search__card
			width 100%
			height 88px
			background-color #FFF
			display flex
			align-items center
			.input__box
				background #F4F4F4
				width 606px
				height 60px
				border-radius 100px
				border-radius 100px
				margin-left 24px
				margin-right 0
				display flex
				align-items center
				.icon__search
					height 32px
					width 32px
					margin-left 20px
					margin-right 16px
				input
					background-color #F4F4F4
					font-size 28px
					color #333
					margin-right 16px
					&::placeholder
						color #999
    	.icon__search__scan
				height 44px
				width 44px
				margin-left 40px
				margin-right 36px

	.box__card
		background-color #FFF
		width 710px
		margin-top 24px
		margin-bottom 172px
		border-radius 12px
		.title
			margin 32px 0 16px 24px
			font-size 30px
			color #121212
			font-weight bold
		.box
			display flex
			flex-direction column
			justify-content center
			align-items center
			font-size 26px
			margin-top 12px
			&:last-child
				.box__item
					border none
					margin-bottom 12px
				.goods__list
					&::after
						border-radius 12px
			.box__item
				height 80px
				width: 670px
				display flex
				align-items center
				border-bottom 1px solid #E7E7E7
				.box__name
					color #333
					margin-left 12px
					margin-right 40px
					font-size 26px
					font-weight bold
					line-height 32px
				input
					flex 1
					color #1B1B1B
					width 280px
					&::placeholder
						color #ccc
				.icon__scan
					height 44px
					width 44px
					margin-left 30px
					margin-right 54px
				.viewGoods
					color #5470FF
					font-size 24px
					line-height 32px
			.goods__list
				background-color #FAFBFF
				display flex
				flex-direction column
				align-items center
				width 100%
				color #121212
				&::before
					content ''
					width 100%
					height 16px
					background-image linear-gradient(180deg, #EBEEFA 0%, rgba(250,251,255,0.00) 100%)
				&::after
					content ''
					width 100%
					height 16px
					background-image linear-gradient(180deg, rgba(250,251,255,0.00) 0%, #EBEEFA 100%)
				.goods:last-child
					border none
					p:first-child
						padding-top 22px
					p:nth-child(3)
						margin 0 12px 16px
				.goods
					width 670px
					border-bottom 1px solid #EBEEFA
					p
						font-size 26px
					p:first-child
						padding 16px 12px 16px
						line-height 36px
						margin 0
						newEllicpsis(2)
					p:nth-child(2),p:nth-child(3)
						color #666
						font-size 24px
					p:nth-child(2)
						margin 0 12px 12px
					p:nth-child(3)
						margin 0 12px 24px
	.box__submit
		display flex
		flex 1
		align-items flex-end
		padding-bottom 66px
		.btn
			primary-button(702px, 88px, 32px)
	.confirm__box
		position fixed
		bottom 0
		height 148px
		display flex
		width 100%
		border-top 1px solid #E7E7E7
		background-color #FFF
		align-items center
		.btn
			primary-button(702px, 88px, 32px)
.am-picker-popup-header-left
	color #666
